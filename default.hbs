    </script>
  </head>
  <body class="{{body_class}}">
    {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
    {{{body}}}
    	<div class="whatsapp_chat_support wcs_fixed_left" id="chat_servicom">
		<div class="wcs_button wcs_button_circle">
			<span class="fa fa-whatsapp"></span>
		</div>	
		<div class="wcs_button_label">
 			Hola, ¿Puedo ayudarte?
 		</div>	

		<div class="wcs_popup">
			<div class="wcs_popup_close">
				<span class="fa fa-close"></span>
			</div>
			<div class="wcs_popup_header">
				<span class="fa fa-whatsapp"></span>
				<strong>Atención en línea</strong>
				
				<div class="wcs_popup_header_description">Hablemos por Whatsapp</div>
			</div>	
			<div class="wcs_popup_input" data-number="528711838472"
			data-availability='{ "monday":"09:00-18:00", 
								"tuesday":"09:00-18:00", 
								"wednesday":"09:00-18:00", 
								"thursday":"09:00-18:00", 
								"friday":"09:00-18:00" }'>
				<input type="text" placeholder="Haz aquí tu pregunta" />
				<i class="fa fa-play"></i>
			</div>
			<div class="wcs_popup_avatar">
				<img src="{{asset "images/avatar_servicom.jpg"}}"alt="">
			</div>
		</div>
	</div>
