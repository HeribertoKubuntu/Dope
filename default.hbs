    <script defer src="{{asset "plugin/whatsapp-chat-support.js"}}"></script>
    <script defer src="{{asset "js/run_whatsapp.js"}}"></script>
    <script id="dsq-count-scr" src="//blogofhery.disqus.com/count.js" async></script>

